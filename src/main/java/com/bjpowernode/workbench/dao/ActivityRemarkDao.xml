<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bjpowernode.workbench.dao.ActivityRemarkDao">

    <!--其中的id 相当于循环中的变量
        选出市场remark 在前端的参数中的值
    -->
    <select id="getCountByIds" resultType="int">

         select count(*)
         from tbl_activity_remark
         where activityId in
         <foreach collection="array" open="(" close=")" separator="," item="id">
            #{id}
         </foreach>

    </select>

    <!--实际删除的数量-->
    <delete id="deleteRemark">
        delete from tbl_activity_remark
        where activityId
        in
        <foreach collection="array" item="id" open="(" close=")" separator=",">
          #{id}
        </foreach>
    </delete>

    <!--通过activityId 查询备注集合-->
    <select id="showRemarkListById" resultType="ActivityRemark">
            select *
            from tbl_activity_remark
            where activityId = #{activityId}
    </select>

    <!--通过备注信息删除备注-->
    <delete id="deleteRemarkById">
            delete from tbl_activity_remark
            where id = #{id}
    </delete>

    <!--修改备注信息-->
    <update id="updateRemark" parameterType="ActivityRemark">
            update tbl_activity_remark
            set

            noteContent=#{noteContent},
            editTime=#{editTime},
            editBy=#{editBy},
            editFlag=#{editFlag}

            where id = #{id}

    </update>

    <!--添加备注信息-->
    <insert id="saveRemark" parameterType="ActivityRemark" >
            insert into tbl_activity_remark(

                id,
                noteContent,
                createTime,
                createBy,
                editFlag,
                activityId

            )values (

                #{id},
                #{noteContent},
                #{createTime},
                #{createBy},
                #{editFlag},
                #{activityId}

            )
    </insert>
</mapper>




























