<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>crm</display-name>
  <!--欢迎页面-->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <!--字符编码过滤器-->
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>com.bjpowernode.web.EncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>

  <!--用户登陆过滤器-->
  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>com.bjpowernode.web.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>*.do</url-pattern>
    <url-pattern>*.jsp</url-pattern>
    <url-pattern>*.html</url-pattern>
  </filter-mapping>

  <!--用户登陆控制页面-->
  <servlet>
    <servlet-name>UserController</servlet-name>
    <servlet-class>com.bjpowernode.settings.web.controller.UserController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>UserController</servlet-name>
    <!--用户登陆查询列表-->
    <url-pattern>/settings/user/login.do</url-pattern>
  </servlet-mapping>

  <!--查询所有用户列表-->
  <servlet>
    <servlet-name>ActivityController</servlet-name>
    <servlet-class>com.bjpowernode.workbench.web.controller.ActivityController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ActivityController</servlet-name>
    <!--查询所有用户列表-->
    <url-pattern>/workbench/activity/getUserList.do</url-pattern>
    <!--市场活动添加列表-->
    <url-pattern>/workbench/activity/saveActivity.do</url-pattern>
    <!--进行分页查询-->
    <url-pattern>/workbench/activity/pageList.do</url-pattern>
    <!--执行市场活动列表删除操作-->
    <url-pattern>/workbench/activity/delBySelId.do</url-pattern>
  </servlet-mapping>



</web-app>
































